{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controller/*"],
      "@middleware/*": ["middleware/*"],
      "@models/*": ["models/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
